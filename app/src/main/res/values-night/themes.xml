<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ClassApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi= "1">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  Night Mode Switch Theme Style -->
    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/night_mode</item>
        <item name="colorSwitchThumbNormal"> #FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <!--  Notifications Switch Theme Style -->
    <style name="notificationsSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/notifications</item>
        <item name="colorSwitchThumbNormal"> #FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <!--  PrivateAccount Switch Theme Style -->
    <style name="privateAccountSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/private_account</item>
        <item name="colorSwitchThumbNormal"> #FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>
</resources>